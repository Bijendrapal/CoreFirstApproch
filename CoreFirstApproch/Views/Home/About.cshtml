@model CoreFirstApproch.Models.Employee

<h1>Fill out of the Application</h1>
<div class="col-4">
    <form asp-action="About">

        <div>
            <input type="hidden" asp-for="Id" />
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-lable"></label>
            <input asp-for="Name" class="form-control" placeholder="Please etner name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-lable"></label>
            <input asp-for="Email" class="form-control" placeholder="Please enter the E-mail" required />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Department" class="control-lable"></label>
            <input asp-for="Department" class="form-control" placeholder="Please enter the E-mail" required />
            <span asp-validation-for="Department" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Salary" class="control-lable"></label>
            <input asp-for="Salary" class="form-control" placeholder="Please enter the E-mail" required />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>

    </form>




</div>