@model CoreFirstApproch.Models.Userlog

<div class="col-4">
    <form asp-controller="Home" asp-action="Index" method="post">
        <div>
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-lable"></label>
            <input asp-for="Email" class="form-control" placeholder="Please Valid Email" required />
            <span asp-validation-for="Email"class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Password" class="control-lable"></label>
            <input asp-for="Password" class="form-control" placeholder="Please Valid Password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-success" />
        </div>


    </form>






</div>